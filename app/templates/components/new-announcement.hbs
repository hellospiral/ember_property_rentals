{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id=message}}
      </div>
      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'newAnnouncementFormShow'}}>New Anouncement</button>
{{/if}}
